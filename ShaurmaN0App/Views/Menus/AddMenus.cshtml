@model ShaurmaN0App.Dtos.MenusCreateDto
@{
    ViewData["Title"] = "AddMenus";
}
<div class="mx-auto" style="width: 300px;">
    <form asp-controller="Menus" asp-action="AddMenusApi" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Name">Name: </label>
            <br>
            <input asp-for="@Model.Name" type="text">
            <span class="d-block text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Price">Price: </label>
            <br>
            <input asp-for="@Model.Price" type="text">
            <span class="d-block text-danger" asp-validation-for="@Model.Price"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.SelectedCategoryId">Category</label>
            <select asp-for="@Model.SelectedCategoryId" class="form-control" asp-items="@Model.Categories"></select>
            <span asp-validation-for="@Model.SelectedCategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="menusImg" class="form-label">Img: </label>
            <input type="file" class="form-control" id="menusImg" name="menusImg" accept=".jpg" required>
            @if (ViewData.ModelState["menusImg"] != null)
            {
                <span class="text-danger">@ViewData.ModelState["menusImg"].Errors.FirstOrDefault()?.ErrorMessage</span>
            }
        </div>
        <button type="submit">Add</button>
    </form>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}